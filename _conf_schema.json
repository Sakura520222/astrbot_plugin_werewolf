{
    "ai_player_model": {
        "description": "AI玩家模型提供商ID",
        "hint": "AI玩家发言、投票等决策使用的模型。留空使用默认模型。可在AstrBot的LLM配置中查看已配置的模型ID",
        "type": "string",
        "default": ""
    },
    "enable_ai_review": {
        "description": "是否启用AI复盘功能",
        "hint": "关闭后游戏结束不会生成AI复盘报告",
        "type": "bool",
        "default": true
    },
    "ai_review_model": {
        "description": "AI复盘模型提供商ID",
        "hint": "留空使用默认模型。可在AstrBot的LLM配置中查看已配置的模型ID",
        "type": "string",
        "default": ""
    },
    "ai_review_prompt": {
        "description": "AI复盘自定义提示词",
        "hint": "留空使用默认提示词。可以自定义AI复盘的风格、侧重点等。支持以下占位符：{winning_faction}=胜利阵营, {game_data}=游戏数据",
        "type": "string",
        "default": ""
    },
    "total_players": {
        "description": "总玩家数",
        "hint": "游戏需要的总人数，建议9人",
        "type": "int",
        "default": 9
    },
    "werewolf_count": {
        "description": "狼人数量",
        "hint": "狼人阵营的玩家数量",
        "type": "int",
        "default": 3
    },
    "seer_count": {
        "description": "预言家数量",
        "hint": "预言家数量，建议1人",
        "type": "int",
        "default": 1
    },
    "witch_count": {
        "description": "女巫数量",
        "hint": "女巫数量，建议1人",
        "type": "int",
        "default": 1
    },
    "hunter_count": {
        "description": "猎人数量",
        "hint": "猎人数量，建议1人",
        "type": "int",
        "default": 1
    },
    "villager_count": {
        "description": "平民数量",
        "hint": "平民数量，建议3人",
        "type": "int",
        "default": 3
    },
    "ban_duration_days": {
        "description": "禁言时长（天）",
        "hint": "游戏中被淘汰玩家的禁言天数，游戏结束后会自动解除",
        "type": "int",
        "default": 30
    },
    "timeout_wolf": {
        "description": "狼人行动超时时间（秒）",
        "hint": "狼人夜晚办掉目标的操作时限",
        "type": "int",
        "default": 120
    },
    "timeout_seer": {
        "description": "预言家验人超时时间（秒）",
        "hint": "预言家夜晚验人的操作时限",
        "type": "int",
        "default": 120
    },
    "timeout_witch": {
        "description": "女巫行动超时时间（秒）",
        "hint": "女巫使用解药或毒药的操作时限",
        "type": "int",
        "default": 120
    },
    "timeout_hunter": {
        "description": "猎人开枪超时时间（秒）",
        "hint": "猎人死亡后开枪带人的操作时限",
        "type": "int",
        "default": 120
    },
    "timeout_speaking": {
        "description": "发言/遗言超时时间（秒）",
        "hint": "白天发言、PK发言、遗言阶段的时限",
        "type": "int",
        "default": 120
    },
    "timeout_vote": {
        "description": "投票超时时间（秒）",
        "hint": "白天投票放逐的操作时限",
        "type": "int",
        "default": 120
    },
    "timeout_dead_min": {
        "description": "已死角色最小等待时间（秒）",
        "hint": "当预言家/女巫已死时，随机等待的最小时长",
        "type": "int",
        "default": 10
    },
    "timeout_dead_max": {
        "description": "已死角色最大等待时间（秒）",
        "hint": "当预言家/女巫已死时，随机等待的最大时长",
        "type": "int",
        "default": 15
    }
}
